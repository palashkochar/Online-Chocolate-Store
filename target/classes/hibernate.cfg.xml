<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/chocolate1</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        
        <mapping class="edu.neu.finalproject.model.User"/>
        <mapping class="edu.neu.finalproject.model.Person"/>
        <mapping class="edu.neu.finalproject.model.Customer"/>
        <mapping class="edu.neu.finalproject.model.Admin"/>
        <mapping class="edu.neu.finalproject.model.Category"/>
        <mapping class="edu.neu.finalproject.model.Chocolate"/>
        <mapping class="edu.neu.finalproject.model.Order"/>
        <mapping class="edu.neu.finalproject.model.OrderItem"/>
        <mapping class="edu.neu.finalproject.model.Payment"/>
        <mapping class="edu.neu.finalproject.model.Company"/>
        <mapping class="edu.neu.finalproject.model.UserRole"/>
    </session-factory>
</hibernate-configuration>
